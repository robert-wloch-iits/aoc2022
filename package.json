{
  "name": "vite-vue3-vitest-testcafe",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "serve": "run-s build preview",
    "lint": "run-s lint:fix",
    "lint:fix": "eslint --ext .js,.ts,.vue --ignore-path .gitignore --fix src/",
    "lint:check": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src/",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "run-p -l test:unit:coverage test:e2e:headless",
    "test:parallel-aggregate": "run-p --aggregate-output -l test:unit test:e2e:headless",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage",
    "test:unit:watch": "vitest",
    "test:unit:update": "vitest run --update",
    "test:e2e": "testcafe chrome tests/e2e/ --hostname localhost --app 'pnpm dev'",
    "test:e2e:headless": "E2E_RUN=true testcafe chrome:headless tests/e2e/ --hostname localhost --app 'pnpm dev'"
  },
  "dependencies": {
    "vue": "^3.2.37",
    "vue-router": "^4.0.16"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/test-utils": "^2.0.0",
    "c8": "^7.11.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-vue": "^9.1.1",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.4.1",
    "prettier": "^2.7.1",
    "testcafe": "^1.19.0",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "vitest": "^0.16.0",
    "vue-eslint-parser": "^9.0.3",
    "vue-tsc": "^0.38.2"
  }
}
